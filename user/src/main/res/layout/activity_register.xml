<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.activity.RegisterActivity">

    <TextView
        android:textSize="@dimen/dp_20"
        android:layout_weight="1"
        android:textColor="#000000"
        android:gravity="center"
        android:text="注册新用户"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"
                android:text="用户名:"
                android:gravity="center"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_70"/>
            <EditText
                android:id="@+id/et_register_username_id"
                android:hint="请输入用户名"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/edit_background"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_70"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"
                android:text="密码:"
                android:gravity="center"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_70"/>
            <EditText
                android:id="@+id/et_register_password_id"
                android:hint="请输入密码"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/edit_background"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_70"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="@dimen/dp_20"
                android:text="确定密码:"
                android:gravity="center"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_70"/>
            <EditText
                android:id="@+id/et_register_password_again"
                android:hint="请再次输入密码"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/edit_background"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_70"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_register_id"
                android:text="注册"
                android:textSize="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_70"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/tv_register_have_id"
                android:textColor="#000000"
                android:textSize="@dimen/dp_15"
                android:gravity="right"
                android:text="已有账号？"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_register_toLogin_id"
                android:textColor="#f00"
                android:textSize="@dimen/dp_15"
                android:gravity="left"
                android:text="点击登录"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>