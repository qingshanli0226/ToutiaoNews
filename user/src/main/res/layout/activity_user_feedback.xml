<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize0"
        android:layout_weight="0.8">

        <ImageView
            android:layout_width="@dimen/spaceSize30"
            android:layout_height="@dimen/spaceSize30"
            android:src="@drawable/top_bar_left_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spaceSize20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize22"
            android:text="反馈与帮助"
            android:layout_centerInParent="true"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceSize1"
            android:background="#D6D2D2"
            android:layout_alignParentBottom="true"></View>
        
    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="@dimen/spaceSize0"
       android:layout_weight="@integer/weight8">
       <include layout="@layout/include_feedback"></include>
   </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize0"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="@dimen/spaceSize0"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight1"
            android:gravity="center">
            
            <Button
                android:layout_width="@dimen/spaceSize170"
                android:layout_height="@dimen/spaceSize40"
                android:text="反馈历史"
                android:textSize="@dimen/textSize18"
                android:textColor="#000"
                android:background="@drawable/feedback_button_history_bac"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/spaceSize0"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight1"
            android:gravity="center">

            <Button
                android:layout_width="@dimen/spaceSize170"
                android:layout_height="@dimen/spaceSize40"
                android:text="意见反馈"
                android:textSize="@dimen/textSize18"
                android:textColor="#fff"
                android:background="@drawable/feedback_button_bac"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>