<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="feedBackTitle">
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spaceSize20</item>
    </style>
    
    <style name="feedBackContent">
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spaceSize20</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="feedBackImg">
        <item name="android:src">@drawable/setting_arrow</item>
        <item name="android:layout_marginRight">@dimen/spaceSize20</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
</resources>
