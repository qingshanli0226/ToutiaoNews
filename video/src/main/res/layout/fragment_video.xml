<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/TopHight"
        android:layout_height="@dimen/video_tabHight">
        <me.weyye.library.colortrackview.ColorTrackTabLayout
            android:layout_width="match_parent"
            android:id="@+id/video_tab"
            android:background="@color/white"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TabStyle"
            app:tabSelectedTextColor="@color/red"
            app:tabTextColor="@color/black"
            android:layout_height="@dimen/video_tabHight"></me.weyye.library.colortrackview.ColorTrackTabLayout>
        <ImageView
            android:layout_width="@dimen/imageWidth"
            android:layout_height="match_parent"
            android:id="@+id/video_image"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/imageLeft"
            android:paddingLeft="@dimen/imageLeft"
            android:background="@mipmap/shadow_add_titlebar_new"
            android:src="@mipmap/search_channel"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_view"></androidx.viewpager.widget.ViewPager>
</LinearLayout>