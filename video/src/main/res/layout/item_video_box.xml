<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/item_video_GSY"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

        <ImageView
            android:id="@+id/item_video_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/video">

        </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/item_title_video_top"
                android:background="_title_video"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_25"
                android:textColor="@color/_title_text"
                android:layout_height="@dimen/dp_40"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_head_pic"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_marginEnd="@dimen/dp_10"
                android:contentDescription="@string/head_pic"
                android:src="@mipmap/ic_launcher_round">

            </ImageView>

            <TextView
                android:id="@+id/item_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_70"
                android:gravity="center_vertical"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_gz_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/add"
                android:gravity="center_vertical"
                android:text="@string/concern">

            </TextView>

            <TextView
                android:id="@+id/item_message_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/message"
                android:gravity="center_vertical"
                android:text="100">

            </TextView>

            <ImageView
                android:id="@+id/item_more_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/more"
                android:src="@drawable/more"
                android:text="更多">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>