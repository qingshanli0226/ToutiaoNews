<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/listHight">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/playerHight">
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/jz_title_bg"
            android:paddingLeft="@dimen/playerPaddingLeft"
            android:paddingRight="@dimen/playerPaddingRight"
            android:paddingTop="@dimen/playerPaddingTop"
            >

            <TextView
                android:id="@+id/list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/listTextSize"
                />

            <TextView
                android:id="@+id/tv_watch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_C1C1C1"
                android:textSize="@dimen/playerCount"
                />

        </LinearLayout>
        <cn.jzvd.JzvdStd
            android:layout_width="match_parent"
            android:id="@+id/list_jiaozi"
            android:layout_height="match_parent"></cn.jzvd.JzvdStd>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/Zero"
            android:layout_weight="5"
            android:padding="@dimen/imagePadding"
            android:layout_height="match_parent"
            android:id="@+id/list_image"/>
        <TextView
            android:layout_width="@dimen/Zero"
            android:layout_weight="10"
            android:text="无痕大魔王"
            android:gravity="center|left"
            android:textSize="@dimen/listTextSize"
            android:id="@+id/list_title"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/Zero"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/add_focus"/>
        <TextView
            android:layout_width="@dimen/Zero"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/listTextLeft"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="关注"
            android:textSize="@dimen/listTextSize" />
        <ImageView
            android:layout_width="@dimen/Zero"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listTextLeft"
            android:src="@mipmap/comment_count"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/listTextLeft"
            android:id="@+id/list_ping"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listTextSize" />
        <ImageView
            android:layout_width="@dimen/Zero"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/playerPaddingLeft"
            android:src="@mipmap/new_more_titlebar"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>