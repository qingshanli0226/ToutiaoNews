<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15sp</item>
    </style>


    <!--标题文字的style -->
    <style name="bigTextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="smallTextStyle">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>
    
    <style name="PromptMargin">
        <item name="android:layout_marginRight">@dimen/margin10dp</item>
        <item name="android:layout_marginBottom">@dimen/margin10dp</item>
    </style>
</resources>
