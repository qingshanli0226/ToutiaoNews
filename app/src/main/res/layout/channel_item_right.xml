<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:lines="2"
            android:text="巴拉巴拉巴拉巴拉"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:textSize="20dp"
            android:id="@+id/channel_item_title"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:text="新华客户端"
                android:id="@+id/channel_item_author"/>
            <TextView
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:text="0评论"
                android:id="@+id/channel_item_common"/>
            <TextView
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:text="09-07"
                android:id="@+id/channel_item_datetime"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/channel_item_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_text_backgroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="▶时间"
            android:id="@+id/channel_item_playtime"
            android:textColor="@color/colorWhite"
            />
    </RelativeLayout>
   
</LinearLayout>