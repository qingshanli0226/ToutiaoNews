<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize200">

        <cn.jzvd.JzvdStd
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spaceSize15"
            android:paddingTop="@dimen/spaceSize10"
            android:paddingRight="@dimen/spaceSize30">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="@dimen/spaceSize18"
                android:layout_marginTop="@dimen/spaceSize4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize14" />

            <TextView
                android:id="@+id/tv_watch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaceSize5"
                android:textColor="@color/color_C1C1C1"
                android:textSize="@dimen/textSize12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/spaceSize5"
            android:background="@drawable/shape_rectangle_translucent"
            android:padding="@dimen/spaceSize5">

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spaceSize2"
                android:gravity="center"
                android:minWidth="@dimen/spaceSize30"
                android:text="02:11"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize8" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize50"
        android:layout_marginLeft="@dimen/spaceSize15"
        android:layout_marginRight="@dimen/spaceSize15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/spaceSize0"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/spaceSize35"
                android:layout_height="@dimen/spaceSize35"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spaceSize10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="视频作者"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/textSize13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/add_focus"
                android:drawablePadding="@dimen/spaceSize2"
                android:gravity="center"
                android:text="@string/focus"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spaceSize20"
                android:drawableLeft="@mipmap/comment_count"
                android:drawablePadding="@dimen/spaceSize2"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/textSize12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spaceSize20"
                android:background="@mipmap/new_more_titlebar"
                android:drawablePadding="@dimen/spaceSize5"
                android:gravity="center"
                android:textSize="@dimen/textSize12" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize5"
        android:background="@color/color_F3F5F4" />

</LinearLayout>