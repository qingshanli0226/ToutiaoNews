<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/videoitem_gsy_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize200"></com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSize50"
        android:layout_below="@id/videoitem_gsy_player"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>