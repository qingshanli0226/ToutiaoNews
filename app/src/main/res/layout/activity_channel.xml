<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChannelActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/my_channel"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="@string/my_chanel"/>
        <TextView
            android:layout_toRightOf="@+id/my_channel"
            android:text="@string/onclick_in_channel"
            android:gravity="center"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:id="@+id/channel_hint"
            android:layout_height="match_parent" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/channel_edit"
            android:text="@string/edit"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/channel_on_select"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="@string/channel_recommend"
        android:layout_height="@dimen/dp_40" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/channel_no_select"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>