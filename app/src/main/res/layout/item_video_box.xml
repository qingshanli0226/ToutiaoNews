<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600px">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/item_video_GSY"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

        <ImageView
            android:id="@+id/item_video_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background">

        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_head_pic"
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher_round">

            </ImageView>

            <TextView
                android:id="@+id/item_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="180px"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_10">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180px"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:id="@+id/item_gz_txt"
                android:drawableLeft="@mipmap/add_focus"
                android:gravity="center_vertical"
                android:text="关注">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/item_message_txt"

                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:drawableLeft="@mipmap/comment_count"
                android:gravity="center_vertical"
                android:text="100">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/item_more_img"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:src="@mipmap/new_more_titlebar">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>