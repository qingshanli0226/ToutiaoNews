<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- 欢迎页背景引用刚才写好的 解决白屏问题的 -->
        <item name="android:windowBackground">@mipmap/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    // values-v21。5.0 以上提供了 setStatusBarColor()  方法设置状态栏颜色。
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">#000</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="meTextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:background">@color/meBackground</item>
        <item name="android:textSize" tools:ignore="DuplicateDefinition">@dimen/textSize15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/setting_arrow</item>
        <item name="android:textColor">@color/meTextViewColor</item>
        <item name="android:layout_marginLeft">@dimen/spaceSize20</item>
        <item name="android:layout_marginRight">@dimen/spaceSize20</item>
    </style>

    <style name="TextAppearanceVideo" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textSize18</item>
    </style>



</resources>
