<?xml version="1.0" encoding="utf-8"?>
<com.example.common.mine.BGRefrushLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/video_refrush"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:visibility="gone"
                    android:id="@+id/video_text"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/video_rv"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
</com.example.common.mine.BGRefrushLayout>